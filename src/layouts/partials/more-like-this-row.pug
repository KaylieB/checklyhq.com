section.more-like-this-row
  .container
    .row
      .col-sm-12.col-lg-8.offset-lg-2.mb-4
        | !{' {{ $related := .Site.RegularPages.Related . | first 3 }} '}
        | !{' {{ with $related }} '}
        .text-center
          h4 More posts like this
          ul
            | !{' {{ range . }} '}
            li
              a(href="{{.RelPermalink }}") {{ .Title }}
            | !{' {{ end }} '}
          | !{' {{ end }} '}
